{
  "name": "haru-website",
  "version": "1.0.0",
  "description": "haru website.",
  "private": true,
  "engines": {
    "node": "^16.16.0",
    "npm": "^8.11.0"
  },
  "scripts": {
    "clean": "rm -rf docs; git restore docs/CNAME",
    "lint": "run-s --continue-on-error lint:*",
    "lint:credentials": "[ \"$CI\" = 'true' ] || secretlint \"**/*\"",
    "lint:md": "markdownlint . \".?*/**/*.{md,markdown}\"",
    "lint:prettier": "prettier --check .",
    "lint:pug": "markuplint \"src/views/**/*.pug\"",
    "lint:style": "stylelint --cache \"src/assets/stylesheets/**/*.scss\"",
    "lint:es": "eslint --cache .",
    "format": "run-s --continue-on-error format:*",
    "format:md": "npm run lint:md -- --fix",
    "format:prettier": "prettier --write .",
    "format:style": "npm run lint:style -- --fix",
    "format:es": "npm run lint:es -- --fix",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "webpack serve --config webpack.dev.ts --open",
    "prebuild": "npm run clean",
    "build": "webpack --config webpack.prod.ts",
    "commit": "cz",
    "cm": "npm run commit",
    "prepare": "[ \"$CI\" = 'true' ] || husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haru52/haru52.github.io.git"
  },
  "keywords": [
    "website",
    "webpage",
    "profile"
  ],
  "author": "haru",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/haru52/haru52.github.io/issues"
  },
  "homepage": "https://github.com/haru52/haru52.github.io#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@commitlint/cz-commitlint": "^17.1.2",
    "@markuplint/pug-parser": "^2.2.2",
    "@secretlint/secretlint-rule-preset-recommend": "^5.2.4",
    "@types/bootstrap": "^5.2.4",
    "@types/globule": "^1.1.4",
    "@types/node": ">=16.0.0 <16.17.0",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.37.0",
    "commitizen": "^4.2.5",
    "css-loader": "^6.7.1",
    "eslint": "^8.24.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "globule": "^1.3.4",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "markdownlint-cli": ">=0.32.1 <1.0.0",
    "markuplint": "^2.10.1",
    "mini-css-extract-plugin": "^2.6.1",
    "npm-check-updates": "^16.3.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "pug-loader": "^2.4.0",
    "sass": "^1.55.0",
    "sass-loader": "^13.0.2",
    "secretlint": "^5.2.4",
    "stylelint": "^14.12.1",
    "stylelint-config-prettier-scss": ">=0.0.1 <1.0.0",
    "stylelint-config-standard-scss": "^5.0.0",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.0",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.2.0",
    "@popperjs/core": "^2.11.6",
    "bootstrap": "^5.2.1"
  }
}
