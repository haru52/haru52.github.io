{
  "name": "haru-website",
  "version": "1.0.0",
  "description": "haru website.",
  "private": true,
  "engines": {
    "node": "^18.16.1",
    "npm": "^9.8.0"
  },
  "scripts": {
    "clean": "rm -rf docs; git restore docs/CNAME",
    "lint": "run-s --continue-on-error lint:*",
    "lint:credentials": "[ \"$CI\" = 'true' ] || secretlint \"**/*\"",
    "lint:md": "markdownlint . \".?*/**/*.{md,markdown}\"",
    "lint:prettier": "prettier --check .",
    "lint:pug": "markuplint \"src/views/**/*.pug\"",
    "lint:style": "stylelint --cache \"src/assets/stylesheets/**/*.scss\"",
    "lint:es": "eslint --cache .",
    "format": "run-s --continue-on-error format:*",
    "format:md": "npm run lint:md -- --fix",
    "format:prettier": "prettier --write .",
    "format:style": "npm run lint:style -- --fix",
    "format:es": "npm run lint:es -- --fix",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "webpack serve --config webpack.dev.ts --open",
    "prebuild": "npm run clean",
    "build": "webpack --config webpack.prod.ts",
    "commit": "cz",
    "cm": "npm run commit",
    "prepare": "[ \"$CI\" = 'true' ] || husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haru52/haru52.github.io.git"
  },
  "keywords": [
    "website",
    "webpage",
    "profile"
  ],
  "author": "haru",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/haru52/haru52.github.io/issues"
  },
  "homepage": "https://github.com/haru52/haru52.github.io#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@commitlint/cz-commitlint": "^17.7.1",
    "@markuplint/pug-parser": "^3.9.0",
    "@secretlint/secretlint-rule-preset-recommend": "^7.0.7",
    "@types/bootstrap": "^5.2.6",
    "@types/globule": "^1.1.6",
    "@types/node": ">=18.0.0 <18.17.0",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.4.0",
    "commitizen": "^4.3.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.46.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.28.1",
    "globule": "^1.3.4",
    "html-webpack-plugin": "^5.5.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "markdownlint-cli": ">=0.35.0 <1.0.0",
    "markuplint": "^3.12.0",
    "mini-css-extract-plugin": "^2.7.6",
    "npm-check-updates": "^16.12.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.1",
    "pug-loader": "^2.4.0",
    "sass": "^1.65.1",
    "sass-loader": "^13.3.2",
    "secretlint": "^7.0.3",
    "stylelint": "^15.10.2",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard-scss": "^10.0.0",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.9.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.4.2",
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.1",
    "reflect-metadata": ">=0.1.13 <1.0.0",
    "tsyringe": "^4.8.0"
  }
}
