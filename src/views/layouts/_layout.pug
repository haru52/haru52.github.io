block variables
  - let description = 'haru website.';

- const defaultKeywords = 'haru,haru52,haruu_52';
- const keywords = pageKeywords === undefined ? defaultKeywords : `${defaultKeywords},${pageKeywords}`;
- const defaultTitle = 'haru';
- const title = pageTitle === undefined ? defaultTitle : `${pageTitle} - ${defaultTitle}`;
- const homeUrl = 'https://haru52.com/';
- const url = filePath === undefined ? homeUrl : `${homeUrl}${filePath}`;
- const ogImagePath = `${homeUrl}${require('../assets/images/ogp.png')}`;

doctype html
html(lang='en' prefix='og: https://ogp.me/ns#' data-bs-theme='dark')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(name='description' content=description)
    meta(name='keywords' content=keywords)
    meta(property='og:title' content=title)
    meta(property='og:type' content='profile')
    meta(property='og:image' content=ogImagePath)
    meta(property='og:url' content=url)
    title= title
    link(rel='icon' href=require('../assets/images/favicon.png'))
  include ../components/_google_analytics
  body
    include ../components/_header
    .container
      main
        nav(aria-label='breadcrumb')
          ol.breadcrumb
            block breadcrumb_items
              li.breadcrumb-item: a(href='/') Home
              li.breadcrumb-item.active(aria-current='page')= pageTitle
        article
          h1= pageTitle === undefined ? title : pageTitle
          block content
      include ../components/_footer
